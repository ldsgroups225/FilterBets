# ===========================================
# FilterBets Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=filterbets
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=filterbets
DATABASE_URL=postgresql+asyncpg://filterbets:your_secure_password_here@db:5432/filterbets
DATABASE_URL_SYNC=postgresql://filterbets:your_secure_password_here@db:5432/filterbets

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379/0

# ===========================================
# Application Configuration
# ===========================================
DEBUG=false
SECRET_KEY=your_super_secret_key_here_min_32_chars
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# Telegram Bot Configuration (Phase 5)
# ===========================================
# Get your bot token from @BotFather on Telegram:
# 1. Open Telegram and search for @BotFather
# 2. Send /newbot and follow instructions
# 3. Copy the token provided
# 4. Set your bot username (without @)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_BOT_USERNAME=YourBotUsername
# Token TTL for account linking (in seconds, default: 1800 = 30 minutes)
TELEGRAM_LINK_TOKEN_TTL=1800

# ===========================================
# Pre-Match Scanner Configuration (Phase 5)
# ===========================================
# How many hours ahead to scan for upcoming fixtures
SCANNER_LOOKAHEAD_HOURS=24
# Maximum notifications to send per scan (safety limit)
SCANNER_MAX_NOTIFICATIONS_PER_SCAN=1000

# ===========================================
# Celery Configuration (Phase 5)
# ===========================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3300

# ===========================================
# External API Keys (Phase 2+)
# ===========================================
# ODDS_API_KEY=your_odds_api_key
# FOOTBALL_DATA_API_KEY=your_football_data_api_key

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
