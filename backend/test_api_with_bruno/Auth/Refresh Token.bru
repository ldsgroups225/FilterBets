meta {
  name: Refresh Token
  type: http
  seq: 3
}

post {
  url: {{base_url}}/auth/refresh
  body: json
  auth: none
}

script:post-response {
  bru.setEnvVar("auth_token", res.body.access_token);
}

tests {
  test("Successful Refresh", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.body.access_token).to.exist;
  });
}

body:json {
  {
    "refresh_token": "{{refresh_token}}"
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
