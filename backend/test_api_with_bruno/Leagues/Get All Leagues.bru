meta {
  name: Get All Leagues
  type: http
  seq: 1
}

get {
  url: {{base_url}}/leagues
  auth: bearer
}

auth:bearer {
  token: {{auth_token}}
}

script:post-response {
  if (res.body && res.body.length > 0) {
    bru.setEnvVar("league_id", res.body[0].id);
  }
}

tests {
  test("Get All Leagues", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.body).to.be.an("array");
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
